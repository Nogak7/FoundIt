<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:FoundIt.ViewModel"
             x:Class="FoundIt.Views.CreateNewPostPage"
              x:DataType="viewModels:CreateNewPostViewModel"
           >
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="input" TargetType="Entry">

                <Setter Property="WidthRequest" Value="250"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>

            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ScrollView>
    <VerticalStackLayout >
<Label
     HeightRequest="20"
     /> 
    
        <Label
            
            Text="CREATE NEW POST"
        FontSize="Header"
        
          VerticalOptions="Center" 
         HorizontalOptions="Center"
            
            />
        
        <Image
            Source="{Binding Picture}" 
            IsVisible="{Binding ShowPhoto}"
            WidthRequest="140"
            HeightRequest="140"
            
            />

        <HorizontalStackLayout Margin="14" VerticalOptions="Center" HorizontalOptions="Center">

            <Border>
                <Button
            Text="{Binding PictureBtn}"
            Command="{Binding TakePictureCommand}"
             WidthRequest="140"
            />
            </Border>


            <Border>
                <Button
         Text="{Binding UploudBtn}"
         Command="{Binding UploadPhoto}"
         WidthRequest="140"
    />
            </Border>


        </HorizontalStackLayout>
        
        <Label 
         
         Text="Theme"
         HorizontalTextAlignment="Center"
     />

        <Entry 
        Text="{Binding Theme}" 
        Style="{StaticResource input }"
     />
        



        <Label 
         
        Text="Context"
        HorizontalTextAlignment="Center"
     />

        <Entry 
       Text="{Binding Context}"
       Style="{StaticResource input }"
         
     />

        <HorizontalStackLayout>
         
            <Label HorizontalOptions="Center">
                <Label.Text  >
                      if you found this item check this box, 
                      if this is an item that you lost leave it empty 
                </Label.Text>
             
            </Label>
           

            <CheckBox
       
       IsChecked="{Binding FoundItem}"
       
       
       />
        </HorizontalStackLayout>

       

             
              <!--TODO Location-->

       
        <Button
            Command="{Binding CreateNewPostCommand}"
         WidthRequest="150"
         Text="Create Post"
            Margin="10"
     />









    </VerticalStackLayout>
   </ScrollView>
</ContentPage>